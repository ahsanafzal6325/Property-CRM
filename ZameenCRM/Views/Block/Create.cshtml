@model ZameenCRM.Models.AddBlockVM

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add Block</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create" id="createBlockForm">
                    <div class="row">
                        <div class="col-xl-4 col-md-6 col-12">
                            <div class="mb-1">
                                <label class="form-label" for="basicInput">Block Name</label>
                                <input type="text" class="form-control" id="BlockName" name="BlockName" placeholder="Enter Block Name" />
                            </div>
                        </div>
                        <div class="col-xl-4 col-md-6 col-12">
                            <div class="mb-1">
                                <label class="form-label" for="basicInput">Block Address</label>
                                <input type="text" class="form-control" id="BlockAddress" name="BlockAddress" placeholder="Enter Block Address" />
                            </div>
                        </div>
                        <div class="form-group mt-2">
                            <input type="button" value="Create" class="btn btn-primary" onclick="submitCreateForm()" />
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

