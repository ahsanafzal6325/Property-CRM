<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/File/Create",
            success: function (response) {
                $("#Createfile").html(response)
            },
            error: function (error) {
                alert(error);
            }
        });
        $.ajax({
            type: "GET",
            url: "/File/GetFiles",
            success: function (response) {


                $("#AllFile").html(response)

            },
            error: function (error) {
                alert(error);
                console.log(error);
            }

        });
    });
    function submitCreateForm() {
